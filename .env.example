# Development Environment Variables
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://dev:dev@localhost:5432/internal_tools
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev
POSTGRES_DB=internal_tools

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Shared Services Configuration
SHARED_SERVICES_URL=http://localhost:3001
SHARED_SERVICES_API_KEY=dev-api-key-change-in-production
ORG_ID=demo-org-id

# File Storage Configuration
STORAGE_PROVIDER=local
STORAGE_BUCKET=internal-tools-files
STORAGE_PATH=./uploads

# AWS Configuration (if using AWS storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=internal-tools-files

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@company.com
FROM_NAME=Internal Tools Platform

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Application URLs
NEXT_PUBLIC_SHARED_SERVICES_URL=http://localhost:3001
NEXT_PUBLIC_ORG_ID=demo-org-id
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Monitoring and Logging
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Tools
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_DEBUG=true